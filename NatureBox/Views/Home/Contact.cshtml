@model NatureBox.Models.ContactModel

@{
    ViewBag.Title = "Contact";
}

<h2 class="title">Contact</h2>
<div class="form-shape">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Expeditor, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Expeditor, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Expeditor, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Messege, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 messege-box">
                    @Html.TextAreaFor(model => model.Messege, new { htmlAttributes = new { @class = "form-control", @maxlength="10" } });
                    @Html.ValidationMessageFor(model => model.Messege, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="SubmitButton">
                <div class="col-md-offset-2">
                    <input type="submit" value="Send" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    </div>

    @section forPage { @Styles.Render("~/Content/Style/AboutAndContact/ContactStyle.css")}
